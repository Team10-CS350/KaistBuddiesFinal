<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackGround"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/namePart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/avatar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/cardview_dark_background"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Name: "
                            android:textStyle="bold"
                            android:textSize="25dp"
                            />
                <TextView
                        android:id="@+id/profileUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="UserName"
                        android:textStyle="bold"
                        android:textColor="@color/colorMellowPrimary"
                        android:textSize="25dp"
                        />


            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Email: "
                        android:textStyle="bold"
                        android:textSize="25dp"
                        />
                <TextView
                        android:id="@+id/profileEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="UserName"
                        android:textStyle="bold"
                        android:textColor="@color/colorMellowPrimary"
                        android:textSize="25dp"
                        />


            </LinearLayout>
        </LinearLayout>
    <TextView
            android:id="@+id/logOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="@color/colorRed"
            android:textSize="20dp"
            android:paddingLeft="5dp"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/buddyTypePart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namePart"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
        <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="User Type:"
                android:textSize="30dp"/>

        <TextView
                android:id="@+id/userType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="  Buddy / International "
                android:textColor="@color/colorMellowPrimary"
                android:textSize="25dp"/>

    </LinearLayout>

    <RatingBar
            android:layout_centerHorizontal="true"
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buddyTypePart"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="3.0"
            android:scaleX="1.0"
            android:scaleY="1.0"
            />

    <LinearLayout
            android:id="@+id/bioPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="BIO:"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"/>
        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textStyle="italic"
                android:text="available"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/commentsPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bioPart"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="Comment"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"
                />
        <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="write comment"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="bottom">
        <EditText
                android:id="@+id/editTextSimple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="write something"
                android:textSize="30dp">

        </EditText>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="comment"
                android:textSize="18dp"
                >

        </Button>
    </LinearLayout>
</RelativeLayout>